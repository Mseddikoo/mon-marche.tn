{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Liste des commandes</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Date</th>
            <th>Référence</th>
            <th>Client</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% if commandes |length == 0 %}
            <tr>
                <td colspan="4">
                    <center>Aucune commande actuellement</center>
                </td>
            </tr>
        {% endif %}


        {% for commande in commandes %}
            <tr>
                <td>{{ commande.date|date('d-m-Y h:i:s') }}</td>
                <td>{{ commande.reference }}</td>
                <td>{{ commande.utilisateur.username }}</td>

                <td> <!-- <a href="{{ path('facturesPDF',{'id':commande.id }) }}"><i class="icon-refresh"></i></a> -->
                    <a href="{{ path('adminShowFacture', { 'id' : commande.id }) }}"><i class="icon-book"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
